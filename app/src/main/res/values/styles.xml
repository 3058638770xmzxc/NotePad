<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowBackground">@color/bg_white</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#FAFAFA</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:elevation">0dp</item>
        <item name="android:height">56dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:actionButtonStyle">@style/MyActionButtonStyle</item>
        <item name="android:actionMenuTextColor">@color/primary_text</item>
    </style>
    
    <style name="MyActionButtonStyle" parent="@android:style/Widget.Holo.ActionButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RoundedAlertDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
